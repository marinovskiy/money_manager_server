{% extends 'base.html.twig' %}
{% block title %}Нова операція{% endblock %}
{% block body %}
    <div class="container div-content">
        <div class="row">
            <div class="col-md-5 container-centered">
                {#<div class="panel-heading">Add new operation for {{ account.name }} account</div>#}
                <div class="panel-heading"><p class="text-title">Додавання нової операції</p></div>

                <div class="panel-heading"><p class="text-subtitle">Вкажіть тип, опис (по бажанню), суму та категорію операції</p></div>

                <div class="panel-body">

                    {{ form_start(form) }}

                    <div class="container-form">
                        <div class="col-md-12">
                            {{ form_row(form.type, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="container-form">
                        <div class="col-md-12">
                            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="container-form">
                        <div class="col-md-12">
                            {{ form_row(form.sum, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="container-form">
                        <div class="col-md-12">
                            {{ form_row(form.category, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div align="center">
                        <div class="col-md-6">
                            <button class="btn btn-block btn-primary" type="submit">Додати</button>
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}